{
  "name": "market-signals",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "ingest": "pnpm --filter ingest start",
    "compute-signals": "pnpm --filter compute-signals start",
    "send-alerts": "pnpm --filter @signals/notifications send-alerts",
    "db:migrate": "pnpm --filter db migrate",
    "test": "vitest run",
    "lint": "eslint apps/web packages --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "prepare": "husky install",
    "changelog": "node scripts/generate-changelog.js",
    "release": "pnpm -w build && node scripts/generate-changelog.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "puppeteer": "^24.34.0",
    "typescript": "^5.3.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.7.4",
    "vitest": "^1.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "dotenv": "^16.3.1",
    "postgres": "^3.4.3"
  }
}
